<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.healora.IndexController"
            style="-fx-padding: 15; -fx-background-color: #fdfaf6;">

    <!-- 🔝 Top Section -->
    
        <VBox spacing="10" alignment="CENTER">
            <Label text="📖 Your Journal Pages"
                   style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: #5d4037;"/>
            <TextField fx:id="searchField" promptText="🔍 Search your journal..."
                       onKeyReleased="#searchEntries"
                       style="-fx-background-radius: 8; -fx-padding: 6;"/>
        </VBox>
    

    <!-- 📄 Center Section -->
    
        <VBox spacing="10" alignment="CENTER">
        <ListView fx:id="listView" prefHeight="350" prefWidth="450"/>
        </VBox>
    

    <!-- 🔘 Bottom Section -->
    
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="viewButton" text="👁 View"
                    onAction="#handleView"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 20;"/>

            <Button fx:id="deleteButton" text="🗑 Delete"
                    onAction="#handleDelete"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 20;"/>
        </HBox>
    

</VBox>
